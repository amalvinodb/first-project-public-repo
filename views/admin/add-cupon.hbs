<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Add Products</h3>
                        <form action="/admin/addcupon" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input name="cuponName" type="text" id="productName"
                                            class="form-control form-control-lg" required />
                                        <label class="form-label" for="firstName">offer name</label>
                                        {{#if error}}
                                        <p class="text-danger">such a cupon already exist</p>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input name="offerRate" type="number" id="quantity"
                                            class="form-control form-control-lg" required min="1" max="99"/>
                                        <label class="form-label" for="firstName">offer rate</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input name="aplicableAmount" type="number" id="productName"
                                            class="form-control form-control-lg" required />
                                        <label class="form-label" for="firstName">The applicable amount for the cupon</label>
                                       
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input name="maxAmount" type="number" id="quantity"
                                            class="form-control form-control-lg" required />
                                        <label class="form-label" for="firstName">Max amount for the cupon</label>
                                    </div>
                                </div>
                            </div>
                    </div>
                    <div class="m-4 pt-2">
                        <input class="btn btn-primary btn-lg" type="submit" value="Add Cupon" />
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>