<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Add Product offer</h3>
                        <form action="/admin/addProductOffer" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="firstName">offer name</label>
                                        <select class="form-select form-select-lg mb-3"
                                            aria-label=".form-select-lg example" name="prodId">
                                            <option selected>select the product</option>
                                            {{#each products}}
                                            <option value="{{this._id}}">{{this.productName}}</option>
                                            {{/each}}
                                        </select>

                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="firstName">offer rate</label>
                                        <input name="offerRate" type="number" id="quantity"
                                            class="form-control form-control-lg" required min="0" max="99" />
                                        
                                    </div>
                                </div>
                            </div>
                    </div>
                    <div class="mt-4 pt-2">
                        <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>