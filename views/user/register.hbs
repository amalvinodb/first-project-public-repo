<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">User Register</p>

                                <form action="/user/register" method="post" class="mx-1 mx-md-4" id="registerForm">

                                    <div class="d-flex flex-row align-items-center mb-4">


                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example1c">Your Name</label>
                                            <input name="Name" type="text" id="Name" class="form-control" />

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">

                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Your Email</label>
                                            <input name="email" type="email" id="email" class="form-control" />

                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">

                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Phone Number</label>
                                            <input name="phone" type="text" id="phone" class="form-control" />

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">

                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4c">Password</label>
                                            <input name="password" type="password" id="password" class="form-control" />

                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">

                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4c">Confirm Password</label>
                                            <input name="repassword" type="password" id="repassword"
                                                class="form-control" />

                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center ">

                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4c">Referal code if any</label>
                                            <input name="refferel" type="text" id="refferel" class="form-control" />
                                        </div>
                                    </div>

                                    {{#if message}}
                                    <span class="text-danger">user already exist</span>
                                    {{/if}}
                                    <div class="d-flex flex-row align-items-center invisible">

                                        <div class="form-outline flex-fill mb-0">
                                            <input name="userStatus" type="" id="userstatus" class="form-control"
                                                value="true" />

                                        </div>
                                    </div>


                                    <div class="d-flex  mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>

                                </form>

                            </div>

                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                    class="img-fluid" alt="Sample image">

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
   
    $(document).ready(function () {
        $("#registerForm").validate({
            rules: {
                email: {
                    required: true,
                    minlength: 5,
                },
                Name: {
                    required: true,
                    minlength: 5,
                },
                password: {
                    required: true,
                    minlength: 4,
                },
                repassword: {
                    required: true,
                    equalTo: "#password"
                },
                phone: {
                    minlength: 10,
                    maxlength: 10,
                    required: true,
                    number:true
                }
            }
        })
    })

</script>
<style>
    .error{
        color:red;
        font-style: italic;
    }
</style>