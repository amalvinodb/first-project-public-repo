<div class="container-fluid">
  <div class="row flex-nowrap">
    <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
      <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
        <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
          <span class="fs-5 d-none d-sm-inline">{{user.Name}}</span>
        </a>
        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
          
          <li>
            <a href="/user" class="nav-link text-light px-0 align-middle my-3 px-4 rounded-pill"
              style="width: 220px;background-color:blue">
              <i class="fs-4 bi-person-circle"></i> <span class="ms-1 d-none d-sm-inline">user</span></a>
          </li>
          <li class="nav-item">
            <a href="/user/cart" class="nav-link text-white align-middle px-0">
              <i class="fs-4 bi-cart3"></i>
              <span class="ms-1 d-none d-sm-inline">cart</span>
            </a>
          </li>
          <li>
            <a href="/user/wishlist" class="nav-link text-white px-0 align-middle">
              <i class="fs-4 bi-heart-fill"></i>
              <span class="ms-1 d-none d-sm-inline">Wishlist</span></a>
          </li>
          <li>
            <a href="/user/allOrders" class="nav-link text-white px-0 align-middle">
              <i class="fs-4 bi-clipboard-data-fill"></i>
              <span class="ms-1 d-none d-sm-inline">Orders</span>
            </a>
          </li>
        </ul>


      </div>
    </div>
    <div class="col py-3">
      <section class="bg-light w-75 p-5"
        style="height: 75vh ; margin:  auto auto; border:0px solid black; border-radius: 20px; ">
        <div class="d-flex flex-wrap">
          <section style="width:50%; ">
            <div class="d-flex">
              <div class="">
                <img
                  src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRBgZbchuTiUtA3Egi1arN4BEQeoTaUtutQ8A&usqp=CAU"
                  class="rounded-circle" alt="user" style="max-width: 70px;" />

              </div>
              <div class="p-2">
                {{user.Name}}
                <p class="text-primary">{{user.email}}</p>
                

              </div>
              <div class="p-2">
                <a href="/user/edituser" class="text-dark"><i class="bi bi-pencil-square"></i></a>
              </div>
            </div>
            <p>phone number: <span class="text-success">{{user.phone}}</span> </p>
            <section>
              <a class="btn btn-primary" href="/user/logout" role="button">logout</a>
            </section>
            <div class="mt-3">
              referal code: <br>
             <span class="text-primary border">{{user.referalCode}}</span>
            </div>
            <div class="border mt-5 p-2" style="width: 200px;">
              wallet Balance: <span class="text-success">{{user.wallet}}</span>
            </div>
          </section>
          <section class="mx-5 border rounded p-3" >
            <h1> <strong>ADDRESS</strong> </h1>
            <hr>
            <div style="max-height: 200px; overflow: scroll;" >
              {{#each address}}
              {{!-- <p>{{inc @index}}</p> --}}
              <p>{{this.userName}},
                ph:{{this.phnumber}}, <br>
                {{this.state}},{{this.town}},{{this.lmk}}, <br>
                {{this.region}},<br>
                {{this.hname}},<br>
                {{this.pin}},
              </p>
              <a href="" class="btn btn-danger">delete</a>
              <hr>
              {{/each}}
            </div>

            <a href="/user/addAddress" class="btn btn-primary"> add an address</a>

          </section>
          
        </div>

      </section>
      

    </div>
  </div>
</div>