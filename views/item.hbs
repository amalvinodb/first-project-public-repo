<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="images p-3 d-flex">
                            <div class="mt-5">
                                {{#each data.images}}
                                <div class="mt-2 border" onclick="changeimg('{{this}}')">
                                    <img src="{{this}}" alt="" style="max-width: 50px;">
                                </div>
                                {{/each}}
                            </div>
                            <div class="text-center p-4 " id="main-image"> <img src="{{data.images.[0]}}"
                                    style="max-width: 400px;  max-height:600px;" id="mainmg" class="block__pic" /> </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i> <span
                                        class="ml-1"></span> </div> <i class="fa fa-shopping-cart text-muted"></i>
                            </div>
                            <div class="mt-4 mb-3">
                                <span class="text-uppercase text-muted brand">{{catagory.catagoryName}}</span>
                                <h5 class="text-uppercase">{{data.productName}}</h5>
                                <div class="price d-flex flex-row align-items-center"> <del>{{data.price}}</del> <span
                                        class="act-price text-danger bi-currency-rupee">{{data.offerPrice}}</span>
                                </div>
                            </div>
                            <p class="about">{{data.discription}}</p>
                            <p>{{catagory.catagoryDetail}}</p>
                            <p class="text-success"><span>{{data.quantity}}</span> units left</p>
                            <div class="cart mt-4 align-items-center"> <button onclick="addToCart('{{data._id}}')"
                                    class="btn btn-primary">add to cart</button>
                                <a onclick="addToWishlist('{{this._id}}')" class="btn btn-danger">Wishlist</a>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function changeimg(dat) {
        document.getElementById('mainmg').src = dat
    }
</script>